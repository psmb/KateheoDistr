prototype(Sfi.Kateheo:News.ShortForAuthorInfo) < prototype(Neos.Fusion:Component) {
	title = ${String.stripTags(q(node).property('title'))}
	teaser = ${String.stripTags(q(node).property('teaser'))}
	parent = ${q(node).parent().property('title')}
	linkUri = Neos.Neos:NodeUri {
		node = ${node}
	}

	renderer = afx`
		<a href={props.linkUri}>
			<h3 style="padding: 6px 0" class="Paragraph lineHeight-tight color-primary">{props.title}</h3>
		</a>
	`
}
